<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AwalActivity"
    android:background="@drawable/hal_awal">

    <Button
        android:id="@+id/tombol_masuk"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="80dp"
        android:fontFamily="@font/font_linotte_normal"
        android:textSize="20dp"
        android:background="@drawable/button_warna"
        android:text="Masuk"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tombol_tentang"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_warna"
        android:fontFamily="@font/font_linotte_normal"
        android:text="Tentang dan lain - lain"
        android:textAllCaps="false"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tombol_masuk"
        app:layout_constraintStart_toStartOf="@+id/tombol_masuk"
        app:layout_constraintTop_toBottomOf="@+id/tombol_masuk" />

    <TextView
        android:id="@+id/SyaratKetentuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Syarat dan Ketentuan"
        android:textColor="#66F9B0"
        android:fontFamily="@font/font_linotte_tipis"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tombol_tentang"
        app:layout_constraintStart_toStartOf="@+id/tombol_tentang"
        app:layout_constraintTop_toBottomOf="@+id/tombol_tentang"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>